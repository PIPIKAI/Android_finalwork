<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:id="@+id/viclick"
        android:background="@color/grave">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="49dp"
            android:layout_height="39dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/fanhui" />

        <TextView
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginRight="-1dp"
            android:layout_marginBottom="64dp"
            android:gravity="center"
            android:text="tame"
            android:textColor="@color/theme"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/mean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/word"
            android:layout_alignLeft="@+id/word"
            android:layout_alignEnd="@+id/word"

            android:layout_alignRight="@+id/word"
            android:layout_alignBottom="@+id/word"
            android:layout_marginStart="-99dp"
            android:layout_marginLeft="-99dp"
            android:layout_marginEnd="-102dp"
            android:layout_marginRight="-102dp"
            android:layout_marginBottom="-27dp"
            android:gravity="center" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/toucharea"
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:background="@color/write">

        <TextView
            android:id="@+id/transition"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textColor="@color/black_2c"
            android:textSize="25sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/clicktxt"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/transition"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="130dp"
            android:layout_marginRight="130dp"
            android:layout_marginBottom="-90dp"
            android:gravity="center"
            android:text="点击屏幕显示释义" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/grave">

        <Button
            android:id="@+id/know"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/write"
            android:text="认识" />

        <Button
            android:background="@color/write"
            android:id="@+id/unknow"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_toEndOf="@+id/know"
            android:layout_toRightOf="@+id/know"
            android:text="不认识" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:progress="0"
            android:progressBackgroundTint="@color/write"
            android:progressBackgroundTintMode="src_atop"
            android:progressTint="@color/theme"
            android:max="100"
            android:layout_height="wrap_content"
            android:layout_below="@+id/know"
            android:layout_marginTop="13dp" />

    </RelativeLayout>
</LinearLayout>
