<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/login_img1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/login_img" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_img1"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/username"
        android:layout_toLeftOf="@+id/username"
        android:text="账号:"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_img1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt1"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/password"
        android:layout_toLeftOf="@+id/password"
        android:text="密码:"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/username"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:inputType="textPassword"
        android:textSize="20sp" />

    <Button
        android:id="@+id/login_bt1"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@+id/password"

        android:layout_marginTop="80dp"
        android:background="@color/theme"
        android:focusableInTouchMode="false"
        android:text="登录"
        android:textColor="@color/write"
        android:textSize="30sp" />

    <Button
        android:id="@+id/login_bt2"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@+id/password"
        android:layout_marginTop="157dp"
        android:background="@color/theme"
        android:focusableInTouchMode="false"
        android:text="注册"
        android:textColor="@color/write"
        android:textSize="30sp" />

</RelativeLayout>