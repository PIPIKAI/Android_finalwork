<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_img1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/login_img"
         />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/login_img1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:shadowColor="@color/theme"
        android:textColorHint="@color/theme"
        android:textColorLink="@color/theme"
        android:textColorHighlight="@color/theme"
        android:hint="请输入账号"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/username"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:inputType="textPassword"
        android:shadowColor="@color/theme"
        android:textColorHint="@color/theme"
        android:textColorLink="@color/theme"
        android:hint="请输入密码"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/goaldays"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:shadowColor="@color/theme"
        android:textColorHint="@color/theme"
        android:textColorLink="@color/theme"
        android:textColorHighlight="@color/theme"
        android:hint="请输入目标天数"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/daily"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/goaldays"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:shadowColor="@color/theme"
        android:textColorHint="@color/theme"
        android:textColorLink="@color/theme"
        android:textColorHighlight="@color/theme"
        android:hint="请输入每天记单词的个数"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daily"
        android:layout_marginTop="50dp"
        android:textColor="@color/color2"
        android:text="用户名已存在！"
        android:visibility="invisible"
        android:textSize="28dp" />

    <Button
        android:id="@+id/re_bt"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@+id/daily"
        android:layout_marginTop="109dp"
        android:background="@color/theme"
        android:focusableInTouchMode="false"
        android:text="注册"
        android:textColor="@color/write"
        android:textSize="30sp" />
</RelativeLayout>
