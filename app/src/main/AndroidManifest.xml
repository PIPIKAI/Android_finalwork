<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evan.demo.bottomnavigationdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/kkremeber"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/kkremeber"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
          >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuActivity" android:label="@string/app_name" />
        <activity android:name=".StudyActivity" android:label="" />
        <activity android:name=".RegisterActivity" android:label="" />
        <activity android:name=".utils.ReadArticle" android:label="" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>